<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.bridgestone.eclaim.bidgestone.Activity.CustomerRegistrationStepOne">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lable"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/cb_grey"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Customer Details"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Step 1 of 4"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/lable"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="7">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/one_filled" />

                <include layout="@layout/item_devider" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/two_grey" />

                <include layout="@layout/item_devider" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/three_grey" />

                <include layout="@layout/item_devider" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/four_grey" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:background="@drawable/edittext_shadow"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_shadow"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:layout_weight="0.6"
                        android:padding="10dp"
                        android:text="Contact Number"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <include layout="@layout/item_devider1" />


                    <AutoCompleteTextView
                        android:id="@+id/contact_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@android:color/transparent"
                        android:dropDownWidth="match_parent"
                        android:hint="Contact Number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="10dp">

                    </AutoCompleteTextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_shadow"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:layout_weight="0.6"
                        android:padding="10dp"
                        android:text="Email Id"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <include layout="@layout/item_devider1" />


                    <AutoCompleteTextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@android:color/transparent"
                        android:dropDownWidth="match_parent"
                        android:hint="Customer Email"
                        android:inputType="textEmailAddress"
                        android:padding="10dp">

                    </AutoCompleteTextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_shadow"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:layout_weight="0.6"
                        android:padding="10dp"
                        android:text="Customer Name"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <include layout="@layout/item_devider1" />


                    <EditText
                        android:id="@+id/Customer_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@android:color/transparent"
                        android:dropDownWidth="match_parent"
                        android:hint="Customer Name"
                        android:inputType="text"
                        android:padding="10dp">

                    </EditText>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_shadow"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:padding="10dp"
                        android:text="Registration Number"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <include layout="@layout/item_devider1" />


                    <AutoCompleteTextView
                        android:id="@+id/registration_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@android:color/transparent"
                        android:dropDownWidth="match_parent"
                        android:hint="Registration Number"
                        android:inputType="number">

                    </AutoCompleteTextView>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_shadow"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:padding="10dp"
                        android:text="State"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <include layout="@layout/item_devider1" />


                    <AutoCompleteTextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/State"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@android:color/transparent"
                        android:dropDownWidth="match_parent"
                        android:hint="State"
                        android:inputType="text">

                    </AutoCompleteTextView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_shadow"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:layout_weight="0.6"
                        android:padding="10dp"
                        android:text="City"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <include layout="@layout/item_devider1" />

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@android:color/transparent"
                        android:dropDownWidth="match_parent"
                        android:hint="City"
                        android:inputType="text"
                        android:padding="10dp">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/back"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/edittext_shadow_second"
                        android:padding="10dp"
                        android:text="Back" />


                    <Button
                        android:id="@+id/next"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@drawable/radius_button_normal"
                        android:dropDownWidth="match_parent"
                        android:padding="10dp"
                        android:text="Next"

                        android:textColor="@color/white">

                    </Button>

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>



    </ScrollView>
</RelativeLayout>
