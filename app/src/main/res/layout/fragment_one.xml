<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="in.bridgestone.eclaim.bidgestone.Fragment.OneFragment">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/textView"
                            android:background="@drawable/edittext_shadow"
                            android:dropDownWidth="match_parent"
                            android:ems="10"
                            android:hint="Customer Registration Number"
                            android:text="">

                        </AutoCompleteTextView>

                        <EditText
                            android:background="@drawable/edittext_shadow"

                            android:layout_marginTop="10dp"

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:ems="1"
                            android:hint="Customer Name"
                            android:imeOptions="actionNext" />

                        <EditText
                            android:layout_marginTop="10dp"

                            android:background="@drawable/edittext_shadow"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:ems="1"
                            android:hint="Email Id"
                            android:imeOptions="actionNext" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="1">


                            <EditText
                                android:background="@drawable/edittext_shadow"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:ems="1"
                                android:hint="State"
                                android:imeOptions="actionNext" />




                            <EditText
                                android:background="@drawable/edittext_shadow"

                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="1"
                                android:hint="City"
                                android:imeOptions="actionNext" />



                        </LinearLayout>


                        <EditText
                            android:layout_marginTop="10dp"

                            android:background="@drawable/edittext_shadow"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="1"
                            android:hint="Contact Number" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/farrow"
                            app:backgroundTint="@color/colorPrimary" />


<!--

                        <Button
                            android:layout_marginTop="20dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:text="Next"
                            android:drawableRight="@drawable/farrow"
                            android:background="@drawable/radius_button_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

-->

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </ScrollView>






</RelativeLayout>
